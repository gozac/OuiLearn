{% extends "EduFormaBundle::layout.html.twig" %}

{% block title %}
    Envoyer un message - {{ parent() }}
{% endblock %}

{% block eduforma_body %}
    <br>
    <div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        <div class="form-group">

            {# Génération du label. #}
            {{ form_label(form.objet, "Objet", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.objet) }}
            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    <div class="form-group">

        {# Génération du label. #}
        {{ form_label(form.destinataire, "Destinataire", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.destinataire) }}
        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.destinataire, {'attr': {'class': 'form-control'}}) }}
        </div>
        </div>
        <div class="form-group">
            {# Génération du label. #}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.content) }}
            <div class="col-sm-13">
                {# Génération de l'input. #}
                {{ form_widget(form.content) }}
            </div>
        </div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

    <p>
        Attention : ce message sera envoyé directement
        après validation.
    </p>

{% endblock %}